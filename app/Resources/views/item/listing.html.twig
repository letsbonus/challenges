{% extends '::base.html.twig' %}

{% block body %}
    <h2>Items imported:</h2>
    <table>
        <thead>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Init Date
            <th>Expiry Date</th>
            <th>Status</th>
            <th>Merchant Name</th>
            <th>Merchant Address</th>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <td>{{ item.title }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.initdate is empty ? "" : item.initdate|date('Y-m-d') }}</td>
                <td>{{ item.expirydate is empty ? "" : item.expirydate|date('Y-m-d') }}</td>
                <td>{{ item.status }}</td>
                <td>{{ item.merchantname }}</td>
                <td>{{ item.merchantaddress }}</td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="*">There are no items!</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h3>Import items from file:</h3>
    {{  form(importer) }}
{% endblock %}